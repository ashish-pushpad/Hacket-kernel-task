    }

  form {
    max-width: 400px;
    margin: 40px auto;
    font-family: sans-serif;
  }

  label {
    display: block;
    margin-bottom: 4px;
  }

  input[type="text"],
  select,
  textarea {
    width: 100%;
    padding: 6px;
    margin-bottom: 12px;
    border: 1px solid #ccc;
  }

  textarea {
    min-height: 60px;
  }

  button {
    padding: 8px 12px;
    background-color: #4a90e2;
    color: white;
    border: none;
    cursor: pointer;
